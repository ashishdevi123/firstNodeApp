<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) { %><%= product.title %><% } %>">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" value="<% if(editing) { %><%= product.price %><% } %>">
                <label for="imgurl">Image url</label>
                <input type="text" name="imgurl" id="imgurl" value="<% if(editing) { %><%= product.imgurl %><% } %>">
                <label for="description">Description</label>
                <input type="text" name="description" id="description" value="<% if(editing) { %><%= product.description %><% } %>">
            </div>
            <% if(editing) { %> <input type="hidden" value="<%= product._id %>" name="_Id"><% } %>
            <button class="btn" type="submit"><% if(editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('includes/end.ejs') %>